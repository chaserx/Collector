<%= simple_form_for(@item) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :date_collected %>
    <%= f.input :checked_in %>
    <%= f.input :checked_out %>
    <%= f.input :checked_out_by %>
    <%= f.input :tag_number %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
